#!/bin/bash
# the function "round()" was taken from
# http://stempell.com/2009/08/rechnen-in-bash/

# the round function:
round()
{
  echo $(printf %.$2f $(echo "scale=$2;(((10^$2)*$1)+0.5)/(10^$2)" | bc))
};
usage()
{
  echo "mvi [options...] merge audio with image"
  echo "-a audio file"
  echo "-i image file"
  echo "-c font color"
  echo "-s font size"
  echo "-b background color"
  echo "usage: RELEASE=15 LANG=2 pe7 merge_translate"
  echo "mvi -a audio -i image -c fontcolor"
  exit
}
if [ $# -lt 1 ]; then
  usage
fi

while getopts r:a:i:c:s:b:o option
do
case "${option}"
in
a) audio=${OPTARG};;
i) image=${OPTARG};;
c) color=${OPTARG};;
s) fontsize=${OPTARG};;
b) bgcolor=${OPTARG};;
r) rate=${OPTARG};;
o) only="true";;
esac
done

if [ -z "$audio" ]; then
  echo "no audio file"
  usage
fi

if [ -z "$image" ]; then
  echo "no image file"
  usage
fi

afile=$(basename $audio)
if [ -z "$color" ]; then
  color="white"
fi

bgcolor=${bgcolor:-black}
#default rate when no change for image
rate=${rate:-1/5}

title="${afile%.*}"
width=$(identify -format "%w" $image)
chars=$(echo -n $title|wc -m|grep -oE "[0-9]+")
duration=$(ffprobe -i $audio -show_entries format=duration -v quiet -of csv="p=0")
bitrate=$(ffprobe -i $audio -show_entries format=bit_rate -v quiet -of csv="p=0")
echo "image width=${width}"

audio_option="-acodec copy"
#audio_option="-c:a aac -b:a $bitrate"
audio_option="-c:a aac -b:a $bitrate"

MIN_FONT_SIZE=20
fontsize=$(round $width/$chars 0)
wwidth=$(echo "$chars*$MIN_FONT_SIZE" | bc -l)
if [ ! -z "$only" ]; then
  ffmpeg -r $rate -loop 1 -i "$image" -i "$audio" -c:v libx264 -tune stillimage $audio_option -pix_fmt yuv420p -vf "pad=width=ceil(iw/2)*2:height=ceil(ih/2)*2" -t $duration -shortest $title.mp4
  exit
fi

# enough space to show text
if [ "$wwidth" -lt "$width" ]; then
  ffmpeg -r $rate -loop 1 -i "$image" -i "$audio" -c:v libx264 -tune stillimage $audio_option  -pix_fmt yuv420p -t $duration -shortest -vf "drawtext=text="${title}":fontfile=/Library/Fonts/Arial\ Unicode.ttf:fontsize=${fontsize}:fontcolor=${color}@1:x=(w-text_w)/2:y=h-th-1:box=1:boxcolor=black@0.8,pad=ceil(iw/2)*2:ceil(ih/2)*2" $title.mp4
else
  #crop=floor(iw/2)*2:floor(ih/2)*2 
  fontsize=MIN_FONT_SIZE
  rate=1
  ffmpeg -r $rate -loop 1 -i "$image" -i "$audio" -c:v libx264 -tune stillimage $audio_option -pix_fmt yuv420p -t $duration -shortest -vf "pad=width=ceil(iw/2)*2:height=ceil(ih/2)*2,drawtext=text="${title}":fontfile=/Library/Fonts/Arial\ Unicode.ttf:fontsize=40:fontcolor=white@1:x=w-mod(50*t\, (w+text_w)):y=h-th-1:box=1:boxcolor=black@0.8" $title.mp4
fi

